---
const { pathname } = Astro.url;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>TimesUpBike</title>
	</head>
	<body>
		<header class="site-header">
			<div class="header-inner">
				<div class="header-left">
					<a
						class="timesup-logo"
						href="https://times-up.org/"
						rel="noreferrer noopener"
						target="_blank"
					>
						<img
							src="/main-timesup-header-logo_5-2022.png"
							alt="TIME'S UP! logo"
							width="60"
							height="60"
						/>
					</a>
					<a class="brand" href="/">Times Up Bike Coop</a>
				</div>
				<nav aria-label="Primary">
					<a href="/" aria-current={pathname === '/' ? 'page' : undefined}>Home</a>
					<a href="/about" aria-current={pathname === '/about/' ? 'page' : undefined}>About</a>
					<a href="/events" aria-current={pathname === '/events/' ? 'page' : undefined}>Events</a>
					<a href="/parts" aria-current={pathname === '/parts/' ? 'page' : undefined}>Parts</a>
				</nav>
			</div>
		</header>
		<main class="page-main">
			<slot />
		</main>
		<footer class="site-footer">
			<div class="footer-inner">
				<div class="footer-links">
					<span>Follow us for updates!</span>
					<a href="https://instagram.com/timesupbike" rel="noreferrer noopener" target="_blank"
						>Instagram</a
					>
					<a href="https://times-up.org/" rel="noreferrer noopener" target="_blank">times-up.org</a>
				</div>
				<p class="footer-description">
					TIME’S UP! is a grassroots environmental group that uses educational outreach and direct action
					to promote a more sustainable, less toxic city. For 35 years, TIME’S UP! has worked to educate
					people about the environmental impacts of everyday decisions, from the food we buy to the means
					of transportation we use.
				</p>
			</div>
		</footer>
	</body>
	</html>

<style>
	html {
		box-sizing: border-box;
	}

	*,
	*::before,
	*::after {
		box-sizing: inherit;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100%;
		background: #f9fafb;
		color: #111827;
	}

	body {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
	}

	.site-header {
		position: sticky;
		top: 0;
		width: 100%;
		background: rgba(249, 250, 251, 0.92);
		backdrop-filter: blur(12px);
		border-bottom: 1px solid rgba(17, 24, 39, 0.08);
		z-index: 10;
	}

	.header-inner {
		margin: 0 auto;
		max-width: 1100px;
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 16px 24px;
	}

	.brand {
		font-size: 20px;
		font-weight: 600;
		text-decoration: none;
		color: #111827;
	}

	.header-left {
		display: flex;
		align-items: center;
		gap: 20px;
	}

	nav {
		display: flex;
		gap: 20px;
	}

	nav a {
		color: #374151;
		text-decoration: none;
		font-weight: 500;
		transition: color 0.2s ease;
	}

	nav a:hover,
	nav a:focus {
		color: #111827;
	}

	nav a[aria-current='page'] {
		color: #111827;
		font-weight: 600;
	}

	.timesup-logo {
		display: inline-flex;
		align-items: center;
		border-radius: 50%;
		padding: 4px;
		transition: transform 0.2s ease;
	}

	.timesup-logo:hover,
	.timesup-logo:focus {
		transform: scale(1.05);
	}

	.timesup-logo img {
		display: block;
		width: 60px;
		height: 60px;
		object-fit: contain;
	}

	.page-main {
		min-height: calc(100vh - 72px);
	}

	.site-footer {
		background: #111827;
		color: #f9fafb;
		padding: 32px 24px 48px;
	}

	.footer-inner {
		max-width: 1100px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		gap: 16px;
	}

	.footer-links {
		display: flex;
		flex-wrap: wrap;
		gap: 16px;
		align-items: center;
		font-size: 16px;
	}

	.footer-links span {
		font-weight: 600;
	}

	.footer-links a {
		color: #60a5fa;
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.footer-links a:hover,
	.footer-links a:focus {
		color: #bfdbfe;
	}

	.footer-description {
		margin: 0;
		line-height: 1.6;
		max-width: 780px;
		color: #d1d5db;
	}

	@media screen and (max-width: 640px) {
		.header-inner {
			flex-direction: column;
			align-items: flex-start;
			gap: 12px;
		}

		nav {
			gap: 16px;
		}

		.timesup-logo img {
			width: 48px;
			height: 48px;
		}

		.site-footer {
			padding: 24px 20px 40px;
		}

		.footer-inner {
			gap: 20px;
		}
	}
</style>
