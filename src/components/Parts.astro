---
import parts from '../content/parts.json';

const { title, intro, items } = parts;
---

<section id="parts" class="page-section">
	<div class="wrapper">
		<h2>{title}</h2>
		<p>{intro}</p>
		<div class="parts-table-wrapper">
			<table>
				<thead>
					<tr>
						<th scope="col">Part</th>
						<th scope="col">Price</th>
					</tr>
				</thead>
				<tbody>
					{items.map((item) => (
						<tr>
							<td>{item.name}</td>
							<td>{item.price}</td>
						</tr>
					))}
				</tbody>
			</table>
		</div>
	</div>
</section>

<style>
	#parts {
		padding: 80px 32px 120px;
		display: flex;
		justify-content: center;
	}

	.wrapper {
		max-width: 700px;
	}

	h2 {
		margin: 0 0 16px;
		font-size: 36px;
		font-weight: 700;
		color: var(--text-dark);
		text-align: center;
	}

	p {
		margin: 0 auto 32px;
		color: var(--text-gray);
		font-size: 16px;
		line-height: 1.7;
		text-align: center;
		max-width: 600px;
	}

	.parts-table-wrapper {
		margin-top: 32px;
		border-radius: 16px;
		background: var(--surface);
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
		overflow: hidden;
	}

	table {
		width: 100%;
		min-width: 300px;
		border-collapse: collapse;
	}

	thead {
		background: var(--accent);
		color: #ffffff;
	}

	th,
	td {
		padding: 16px 24px;
		text-align: left;
		font-size: 15px;
		line-height: 1.5;
	}

	th {
		font-weight: 600;
		font-size: 14px;
		text-transform: uppercase;
		letter-spacing: 0.04em;
	}

	tbody tr {
		border-bottom: 1px solid rgba(0, 0, 0, 0.06);
	}

	tbody tr:last-child {
		border-bottom: none;
	}

	tbody tr:last-child td {
		font-weight: 600;
		color: var(--primary);
	}

	td:first-child {
		font-weight: 500;
		color: var(--text-dark);
	}

	td:last-child {
		color: var(--text-gray);
		font-weight: 500;
	}

	@media screen and (max-width: 768px) {
		#parts {
			padding: 56px 20px 80px;
		}

		h2 {
			font-size: 28px;
		}

		p {
			font-size: 15px;
			margin-bottom: 24px;
		}

		.parts-table-wrapper {
			margin-top: 24px;
		}

		th,
		td {
			padding: 14px 18px;
			font-size: 14px;
		}
	}
</style>
