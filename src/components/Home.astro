import { Image } from 'astro:assets';
import { marked } from 'marked';
import home from '../content/home.json';

const { hero, howItWorks, helpfulTips, hours, location, contact, socialLinks, gallery } = home;

// Parse markdown to HTML
const taglineHtml = await marked.parse(hero.tagline);
const howItWorksHtml = await marked.parse(howItWorks.text);
const helpfulTipsHtml = await marked.parse(helpfulTips.tips);
const hoursHtml = await marked.parse(hours.text);
const locationHtml = await marked.parse(location.text);

// Import all gallery images dynamically
const images = import.meta.glob<{ default: ImageMetadata }>('../assets/gallery/*.{jpg,jpeg,png,gif}', { eager: true });

// Helper to get image by filename
const getImage = (src: string) => {
	const filename = src.split('/').pop();
	const key = Object.keys(images).find(k => k.includes(filename || ''));
	return key ? images[key].default : null;
};
