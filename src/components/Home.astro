<script>
	const columns = document.querySelectorAll('.gallery-col');

	// Stagger offsets as proportion of viewport height (scales with resolution)
	// ~100px and ~200px at 1080p, proportionally larger at 4K
	const offsetRatios = [0, -0.09, -0.18];

	function updateStagger() {
		// Disable stagger when gallery is stacked below hero
		const isStackedLayout = window.matchMedia('(max-width: 1024px)').matches;
		if (isStackedLayout) {
			columns.forEach((col) => {
				(col as HTMLElement).style.transform = '';
			});
			return;
		}

		const scrollTop = window.scrollY;
		const maxScroll = document.documentElement.scrollHeight - window.innerHeight;
		const vh = window.innerHeight;

		// Progress from 0 (top) to 1 (bottom)
		const progress = maxScroll > 0 ? scrollTop / maxScroll : 0;

		// Stagger peaks at middle (0.5), disappears at edges (0 and 1)
		// Using sine curve for smooth easing
		const staggerAmount = Math.sin(progress * Math.PI);

		columns.forEach((col, i) => {
			const element = col as HTMLElement;
			const offset = offsetRatios[i] * vh * staggerAmount;
			element.style.transform = `translateY(${offset}px)`;
		});
	}

	// Redistribute images for 2-column layout
	let originalColumns: HTMLElement[][] = [];
	let isRedistributed = false;

	function storeOriginalLayout() {
		if (originalColumns.length === 0) {
			columns.forEach((col) => {
				originalColumns.push(Array.from(col.children) as HTMLElement[]);
			});
		}
	}

	function redistributeFor2Columns() {
		if (isRedistributed) return;
		storeOriginalLayout();

		const allItems = originalColumns.flat();
		const half = Math.ceil(allItems.length / 2);

		columns.forEach((col) => col.innerHTML = '');
		allItems.slice(0, half).forEach((item) => columns[0].appendChild(item));
		allItems.slice(half).forEach((item) => columns[1].appendChild(item));

		isRedistributed = true;
	}

	function restoreOriginalLayout() {
		if (!isRedistributed || originalColumns.length === 0) return;

		columns.forEach((col, i) => {
			col.innerHTML = '';
			originalColumns[i].forEach((item) => col.appendChild(item));
		});

		isRedistributed = false;
	}

	function handleColumnLayout() {
		const isTwoColumn = window.matchMedia('(max-width: 640px)').matches;
		if (isTwoColumn) {
			redistributeFor2Columns();
		} else {
			restoreOriginalLayout();
		}
	}

	// Scroll to middle on page load for maximum stagger (skip on stacked/tablet layouts)
	document.addEventListener('DOMContentLoaded', () => {
		handleColumnLayout();

		const isStackedLayout = window.matchMedia('(max-width: 1024px)').matches;
		if (isStackedLayout) return;

		requestAnimationFrame(() => {
			const maxScroll = document.documentElement.scrollHeight - window.innerHeight;
			window.scrollTo({ top: maxScroll / 2, behavior: 'instant' });
			requestAnimationFrame(updateStagger);
		});
	});

	window.addEventListener('scroll', updateStagger);
	window.addEventListener('resize', () => {
		updateStagger();
		handleColumnLayout();
	});
</script>

