<script>
	// TEST MODE: Set to true to always show blue bars (for testing)
	const TEST_OPERATING_HOURS = false;

	// Cache configuration
	const CACHE_KEY = 'timesup_chart_data';
	const CACHE_TIMESTAMP_KEY = 'timesup_chart_data_timestamp';
	const CACHE_OPERATING_HOURS_KEY = 'timesup_operating_hours_status';
	const TEST_MODE_TTL = 60 * 1000; // 1 minute (for testing)
	const OPERATING_HOURS_TTL = 5 * 60 * 1000; // 5 minutes
	const NON_OPERATING_HOURS_TTL = 24 * 60 * 60 * 1000; // 24 hour

	// Get cache TTL based on operating hours
	function getCacheTTL() {
		if (TEST_OPERATING_HOURS) return TEST_MODE_TTL;
		return isOperatingHours() ? OPERATING_HOURS_TTL : NON_OPERATING_HOURS_TTL;
	}

	// Check if cached data is still valid
	function isCacheValid() {
		try {
			const timestamp = localStorage.getItem(CACHE_TIMESTAMP_KEY);
			if (!timestamp) return false;

			const age = Date.now() - parseInt(timestamp);
			const ttl = getCacheTTL();

			// Check for operating hours transition
			const cachedDuringOperatingHours = localStorage.getItem(CACHE_OPERATING_HOURS_KEY) === 'true';
			const currentlyOperatingHours = isOperatingHours();

			// If we've transitioned from non-operating to operating hours, invalidate cache
			if (!cachedDuringOperatingHours && currentlyOperatingHours) {
				return false;
			}

			return age < ttl;
		} catch (error) {
			return false;
		}
	}

	// Get cached data
	function getCachedData() {
		try {
			const cached = localStorage.getItem(CACHE_KEY);
			return cached ? JSON.parse(cached) : null;
		} catch (error) {
			return null;
		}
	}

	// Save data to cache
	function setCachedData(data) {
		try {
			localStorage.setItem(CACHE_KEY, JSON.stringify(data));
			localStorage.setItem(CACHE_TIMESTAMP_KEY, Date.now().toString());
			localStorage.setItem(CACHE_OPERATING_HOURS_KEY, isOperatingHours().toString());
		} catch (error) {
			console.error('Failed to cache data:', error);
		}
	}

	// Fetch and render charts and footer slogan
	async function fetchAndRenderCharts() {
		try {
			let data;

			// Check for build-time data first (for instant initial load)
			if (window.__BUILD_TIME_DATA__ && !getCachedData()) {
				data = window.__BUILD_TIME_DATA__;
				// Cache the build-time data with its timestamp
				localStorage.setItem(CACHE_KEY, JSON.stringify(data));
				localStorage.setItem(CACHE_TIMESTAMP_KEY, window.__BUILD_TIME_TIMESTAMP__.toString());
				// Clear the global to prevent reuse
				delete window.__BUILD_TIME_DATA__;
				delete window.__BUILD_TIME_TIMESTAMP__;
			}
			// Check cache next
			else if (isCacheValid()) {
				data = getCachedData();
			}

			// Fetch fresh data if cache miss or invalid
			if (!data) {
				const response = await fetch('https://script.google.com/macros/s/AKfycbzhGL1Zdvz5UBrqvFL3JAkCDNisd8wha3HCfK9cN1dfUwxu1zXIgX-vqGDHPMJr7U2h/exec');
				data = await response.json();
				setCachedData(data);
			}

			// Parse data into a map for easier access
			const dataMap = {};
			data.forEach(item => {
				dataMap[item.Param] = item.Value;
			});

			// Render previous shift chart
			renderChart('prev', {
				date: dataMap.prev_shift_date,
				shiftData: getShiftData(dataMap, 'prev_shift'),
				users: Number(dataMap.prev_shift_users) || 0,
				volunteers: Number(dataMap.prev_shift_volunteers) || 0
			});

			// Render current shift chart
			renderChart('curr', {
				date: dataMap.curr_shift_date,
				shiftData: getShiftData(dataMap, 'curr_shift'),
				users: Number(dataMap.curr_shift_users) || 0,
				volunteers: Number(dataMap.curr_shift_volunteers) || 0
			});

			// Update footer slogan (existing logic)
			updateFooterSlogan(dataMap);

			// Hide loading indicators
			document.querySelectorAll('.chart-loading').forEach(el => {
				el.classList.add('hidden');
			});

		} catch (error) {
			console.error('Error fetching chart data:', error);
		}
	}

	// Extract shift_1 through shift_20 values
	function getShiftData(dataMap, prefix) {
		const values = [];
		for (let i = 1; i <= 20; i++) {
			const key = `${prefix}_${i}`;
			values.push(Number(dataMap[key]) || 0);
		}
		return values;
	}

	// Format date from ISO string to "Sunday - Feb 1" format
	function formatDate(dateString) {
		if (!dateString) return '';
		try {
			const date = new Date(dateString);
			const dayName = date.toLocaleDateString('en-US', { weekday: 'long' });
			const month = date.toLocaleDateString('en-US', { month: 'short' });
			const day = date.getDate();
			return `${dayName} - ${month} ${day}`;
		} catch (error) {
			console.error('Error formatting date:', error);
			return dateString;
		}
	}

	// Check if current time is during operating hours (Sun/Wed 5pm-8pm)
	function isOperatingHours() {
		const now = new Date();
		const day = now.getDay(); // 0 = Sunday, 3 = Wednesday
		const hour = now.getHours();

		// Check if it's Sunday (0) or Wednesday (3)
		const isOperatingDay = day === 0 || day === 3;
		// Check if time is between 5pm (17) and 8pm (20)
		const isOperatingTime = hour >= 17 && hour < 20;


		return isOperatingDay && isOperatingTime;
	}

	// Check if a date string is today
	function isToday(dateString) {
		if (!dateString) return false;
		try {
			const date = new Date(dateString);
			const today = new Date();
			return date.toDateString() === today.toDateString();
		} catch (error) {
			console.error('Error checking if date is today:', error);
			return false;
		}
	}

	// Render a single chart
	function renderChart(chartId, data) {
		const { date, shiftData, users, volunteers } = data;

		// Calculate total
		const total = users + volunteers;

		// Render header with formatted date
		const headerEl = document.getElementById(`${chartId}-chart-header`);
		if (headerEl) {
			headerEl.textContent = formatDate(date) || 'Loading...';
		}

		// Render icons row
		const iconsEl = document.getElementById(`${chartId}-chart-icons`);
		if (iconsEl) {
			iconsEl.innerHTML = `
				<span>${users} ü§∑‚Äç‚ôÇÔ∏è</span>
				<span>${volunteers} üõ†Ô∏è</span>
				<span>${total}üßç</span>
			`;
		}

		// Render bars
		const barsEl = document.getElementById(`${chartId}-chart-bars`);
		if (barsEl) {
			const maxValue = Math.max(...shiftData);
			const isActive = chartId === 'curr' && (TEST_OPERATING_HOURS || (isOperatingHours() && isToday(date)));

			const bars = shiftData.map(value => {
				const height = maxValue > 0 ? (value / maxValue) * 100 : 0;
				const isPeak = value === maxValue && value > 0;
				const classes = ['chart-bar'];
				if (isPeak) classes.push('peak');
				if (isActive) classes.push('active');
				return `<div class="${classes.join(' ')}" style="height: ${height}%"></div>`;
			}).join('');

			barsEl.innerHTML = bars;
		}
	}

	// Update footer slogan
	function updateFooterSlogan(dataMap) {
		const footerSlogan = document.getElementById('footer-slogan');
		const numBikesFixed = Number(dataMap.customers);
		const numVolunteers = Number(dataMap.volunteers);
		const numVisits = Number(dataMap.visits);

		if (footerSlogan && numBikesFixed && numVolunteers) {
			footerSlogan.textContent = "  " + (numBikesFixed + numVolunteers) + "+ bikes repaired in " + numVisits + " visits,";
		}
	}

	// Fetch and render on page load
	document.addEventListener('DOMContentLoaded', fetchAndRenderCharts);

	// Set up automatic polling based on operating hours
	function startPolling() {
		// Set up interval to check and refresh cache
		setInterval(async () => {
			if (!isCacheValid()) {
				await fetchAndRenderCharts();
			}
		}, 60000); // Check every minute

		// Also check when page becomes visible (tab switching)
		document.addEventListener('visibilitychange', async () => {
			if (!document.hidden && !isCacheValid()) {
				await fetchAndRenderCharts();
			}
		});
	}

	// Start polling after initial load
	document.addEventListener('DOMContentLoaded', startPolling);
</script>

