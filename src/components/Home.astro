<script>
	import { fetchAndRenderCharts, startPolling } from '../lib/charts';
	import { clearCache, CACHE_DEPLOY_KEY } from '../lib/cache';

	// TEST MODE: Set to true to always show blue bars (for testing)
	const TEST_OPERATING_HOURS = false;

	// Get build-time data and deploy ID from window globals (set by previous script)
	const buildTimeData = window.__BUILD_TIME_DATA__;
	const deployId = window.__DEPLOY_ID__;

	// Clear globals after extracting
	if (window.__BUILD_TIME_DATA__) {
		delete window.__BUILD_TIME_DATA__;
		delete window.__DEPLOY_ID__;
	}

	// Bust cache if this is a new deploy
	const storedDeployId = localStorage.getItem(CACHE_DEPLOY_KEY);
	if (storedDeployId !== deployId) {
		clearCache();
		localStorage.setItem(CACHE_DEPLOY_KEY, deployId ?? '');
	}

	// Expose for console testing/debugging
	window.fetchAndRenderCharts = (forceRefresh = false) =>
		fetchAndRenderCharts(forceRefresh, TEST_OPERATING_HOURS, null);

	// Fetch and render on page load
	document.addEventListener('DOMContentLoaded', () =>
		fetchAndRenderCharts(false, TEST_OPERATING_HOURS, buildTimeData)
	);

	// Start polling after initial load
	document.addEventListener('DOMContentLoaded', () => startPolling(TEST_OPERATING_HOURS));
</script>

